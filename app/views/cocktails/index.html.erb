<div class="container">
  <h1>All cocktails</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-md-6 mb-4">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key %>)">
        <div class="tags-container">
          <%= cocktail.name %>
          <br>
          <%= link_to 'Show', cocktail %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <br>
  <%= link_to 'New Cocktail', new_cocktail_path, class: 'btn btn-primary btn-block'%>
  <br>
</div>
