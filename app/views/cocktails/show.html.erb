<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @cocktail.photo.key %>);">
  <div class="container">
     <ul>
      <h1><%= @cocktail.name %></h1>
      <br>
      <% @cocktail.doses.each do |dose|%>
      <li style="list-style-type: none;">
        <p> <%= dose.description %>
        of
        <%= dose.ingredient.name %>
        <%= link_to 'X', dose_path(dose), method: :delete, class: 'btn btn-danger' %>
        </p>
        <% end %>
      </li>
      <br>
      <p>
        <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-success' %>
      </p>
    </ul>
  </div>
</div>
<%= link_to 'Back', cocktails_path, class: 'btn btn-primary btn-block' %>
